<ns0:RootFileSystem xmlns:ns0="https://www.linutronix.de/projects/Elbe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" created="2009-05-20T08:50:56" revision="6" xsi:schemaLocation="https://www.linutronix.de/projects/Elbe dbsfed.xsd">
	<initvm>
		<buildtype>amd64</buildtype>
		<mirror>
			<primary_host>ftp.debian.org</primary_host>
			<primary_path>/debian</primary_path>
			<primary_proto>http</primary_proto>
			<url-list>
				<url>
					<binary>
						http://debian.linutronix.de/elbe-testing wheezy main
					</binary>
					<source>
						http://debian.linutronix.de/elbe-testing wheezy main
					</source>
				</url>
			</url-list>
		</mirror>
		<noauth/>
		<suite>wheezy</suite>
	</initvm>
	<project>
		<name>zedboard</name>
		<version>1.0</version>
		<description>
			sdcard image for xilinx zedboard with real-time kernel
		</description>
		<buildtype>armhf</buildtype>
		<mirror>
			<primary_host>ftp.debian.org</primary_host>
			<primary_path>/debian</primary_path>
			<primary_proto>http</primary_proto>
			<url-list>
				<url>
					<binary>
						http://debian.linutronix.de/elbe-testing wheezy main
					</binary>
					<source>
						http://debian.linutronix.de/elbe-testing wheezy main
					</source>
				</url>
			</url-list>
		</mirror>
		<noauth />
		<suite>wheezy</suite>
	</project>
	<target>
		<hostname>zedboard</hostname>
		<domain>osadl.org</domain>
		<passwd>foo</passwd>
		<console>ttyPS0,115200</console>
		<images>
			<msdoshd>
				<name>zedboard.img</name>
				<size>1900MiB</size>
					<partition>
						<size>50MiB</size>
						<label>boot</label>
						<bootable />
					</partition>
					<partition>
						<size>remain</size>
						<label>rfs</label>
					</partition>
			</msdoshd>
		</images>
		<fstab>
			<bylabel>
				<label>rfs</label>
				<mountpoint>/</mountpoint>
				<fs>
					<type>ext4</type>
					<tune2fs>-i 0</tune2fs>
				</fs>
			</bylabel>
			<bylabel>
				<label>boot</label>
				<mountpoint>/boot</mountpoint>
				<fs>
					<type>vfat</type>
				</fs>
			</bylabel>
		</fstab>
		<norecommend />
		<finetuning>
			<rm>/etc/apt/sources.list</rm>
			<rm>/var/cache/apt/archives/*.deb</rm>
			<rm>/usr/share/doc</rm>
			<rm>/usr/share/man</rm>
			<command>echo "ttyPS0" &gt;&gt; /etc/securetty</command>
			<command>echo "auto eth0" &gt;&gt; /etc/network/interfaces</command>
			<command>echo "iface eth0 inet dhcp" &gt;&gt; /etc/network/interfaces</command>
		</finetuning>
		<pkg-list>
			<pkg>u-boot-xlnx</pkg>
			<pkg>linux-image-zedboard-3.12.14-rt23-1</pkg>
			<pkg>elbe-updated</pkg>
			<pkg>openssh-server</pkg>
			<pkg>less</pkg>
			<pkg>bash</pkg>
			<pkg>vim-nox</pkg>
			<pkg>wget</pkg>
			<pkg>ntpdate</pkg>
			<pkg>rt-tests</pkg>
		</pkg-list>
	</target>
</ns0:RootFileSystem>
