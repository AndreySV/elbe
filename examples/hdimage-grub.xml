<ns0:RootFileSystem xmlns:ns0="https://www.linutronix.de/projects/Elbe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" created="2009-05-20T08:50:56" revision="6" xsi:schemaLocation="https://www.linutronix.de/projects/Elbe dbsfed.xsd">
	<project>
		<name>x86 hdimage example</name>
		<version>6</version>
		<description>
			lightweight example
			after 'make run-con' you can login the system from another terminal with
			'ssh root@localhost -p 5022'
		</description>
		<buildtype>amd64</buildtype>
		<mirror>
			<primary_host>ftp.de.debian.org</primary_host>
			<primary_path>/debian</primary_path>
			<primary_proto>http</primary_proto>
		</mirror>
		<noauth/>
		<suite>wheezy</suite>
	</project>
	<target>
		<hostname>lxvm</hostname>
		<domain>tec.linutronix.de</domain>
		<passwd>foo</passwd>
		<console>ttyS0,115200</console>
		<package>
			<tar>
				<name>nfsroot.tar.gz</name>
			</tar>
		</package>
		<images>
			<msdoshd>
				<name>sda.img</name>
				<size>1900MiB</size>
				<grub-install/>
				<partition>
								<size>remain</size>
								<label>rfs</label>
				</partition>
			</msdoshd>
			<msdoshd>
				<name>sdb.img</name>
				<size>400MiB</size>
				<partition>
								<size>remain</size>
								<label>config</label>
				</partition>
			</msdoshd>
		</images>
		<fstab>
			<bylabel>
				<label>rfs</label>
				<mountpoint>/</mountpoint>
				<fs>
					<type>ext4</type>
					<tune2fs>-i 0</tune2fs>
				</fs>
			</bylabel>
			<bylabel>
				<label>config</label>
				<mountpoint>/mnt/config</mountpoint>
				<fs>
					<type>ext4</type>
					<tune2fs>-i 0</tune2fs>
				</fs>
				<options>ro</options>
			</bylabel>
			<bydev>
				<source>none</source>
				<mountpoint>/sys/kernel/debug</mountpoint>
				<fs>
					<type>debugfs</type>
				</fs>
			</bydev>
		</fstab>
		<finetuning>
			<rm>var/cache/apt/archives/*.deb</rm>
		</finetuning>
		<pkg-list>
			<pkg>linux-image-amd64</pkg>
			<pkg>grub-pc</pkg>
			<pkg>openssh-client</pkg>
			<pkg>openssh-server</pkg>
			<pkg>less</pkg>
			<pkg>bash</pkg>
			<pkg>vim-nox</pkg>
		</pkg-list>
	</target>
</ns0:RootFileSystem>
