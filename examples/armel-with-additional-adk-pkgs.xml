<ns0:RootFileSystem xmlns:ns0="https://www.linutronix.de/projects/Elbe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" created="2009-05-20T08:50:56" revision="6" xsi:schemaLocation="https://www.linutronix.de/projects/Elbe dbsfed.xsd">
	<project>
		<name>ARMexample</name>
		<version>08.15</version>
		<description>
			creates an UBI based target system without debian package management
			tools for version control and package build are added to the buildimage
		</description>
		<buildtype>armel</buildtype>
		<mirror>
			<primary_host>httpredir.debian.org</primary_host>
			<primary_path>/debian</primary_path>
			<primary_proto>http</primary_proto>
		</mirror>
		<suite>wheezy</suite>
		<buildimage>
			<pkg-list>
				<pkg>build-essential</pkg>
				<pkg>devscripts</pkg>
				<pkg>subversion</pkg>
				<pkg>git</pkg>
				<pkg>debhelper</pkg>
				<pkg>nfs-common</pkg>
				<pkg>openssh-server</pkg>
			</pkg-list>
		</buildimage>
	</project>
	<target>
		<hostname>myARM</hostname>
		<domain>tec.linutronix.de</domain>
		<passwd>foo</passwd>
		<console>ttyS0,115200</console>
		<images>
			<mtd>
				<name>nand.img</name>
				<nr>0</nr>
				<size>63MB</size>
				<ubivg>
					<label>nand</label>
					<miniosize>2048</miniosize>
					<maxlogicaleraseblockcount>2047</maxlogicaleraseblockcount>
					<logicaleraseblocksize>126976</logicaleraseblocksize>
					<physicaleraseblocksize>128KiB</physicaleraseblocksize>
					<ubi>
						<type>static</type>
						<label>kernel</label>
						<id>0</id>
						<size>3MiB</size>
						<binary>/boot/vmlinuz-2.6.32-5-versatile</binary>
					</ubi>
					<ubi>
						<type>dynamic</type>
						<label>rfs</label>
						<id>1</id>
						<size>55MiB</size>
					</ubi>
					<ubi>
						<type>dynamic</type>
						<label>data</label>
						<id>3</id>
						<size>2MiB</size>
					</ubi>
				</ubivg>
			</mtd>
		</images>
		<fstab>
			<bylabel>
				<label>data</label>
				<mountpoint>/data</mountpoint>
				<fs>
					<type>ubifs</type>
					<mkfs>-x lzo</mkfs>
				</fs>
				<options>ro</options>
			</bylabel>
			<bylabel>
				<label>rfs</label>
				<mountpoint>/</mountpoint>
				<fs>
					<type>ubifs</type>
					<mkfs>-x lzo</mkfs>
				</fs>
			</bylabel>
			<bydev>
				<source>tmpfs</source>
				<mountpoint>/tmp</mountpoint>
				<fs>
					<type>tmpfs</type>
				</fs>
				<options>size=4m</options>
			</bydev>
		</fstab>
		<tighten />
		<finetuning>
			<rm>boot</rm>
			<rm>usr/lib/gconv</rm>
			<rm>usr/lib/perl*</rm>
			<rm>usr/share/doc</rm>
			<rm>usr/share/man</rm>
			<rm>usr/share/locale</rm>
			<rm>usr/share/perl*</rm>
			<rm>usr/share/i18n</rm>
			<rm>var/cache/*</rm>
			<rm>var/lib/apt*</rm>
			<rm>var/lib/dpkg</rm>
			<rm>etc/init.d/checkroot.sh</rm>
			<rm>etc/init.d/checkfs.sh</rm>
			<rm>/etc/mtab</rm>
			<command>ln -s /proc/mounts etc/mtab</command>
		</finetuning>
		<pkg-list>
			<pkg>util-linux</pkg>
			<pkg>libblkid1</pkg>
			<pkg>libattr1</pkg>
			<pkg>libuuid1</pkg>
			<pkg>libsepol1</pkg>
			<pkg>libgcc1</pkg>
			<pkg>lsb-base</pkg>
			<pkg>libvolume-id0</pkg>
			<pkg>libselinux1</pkg>
			<pkg>ncurses-bin</pkg>
			<pkg>sed</pkg>
			<pkg>libc-bin</pkg>
			<pkg>libc6</pkg>
			<pkg>gawk</pkg>
			<pkg>base-files</pkg>
			<pkg>dash</pkg>
			<pkg>module-init-tools</pkg>
			<pkg>coreutils</pkg>
			<pkg>libacl1</pkg>
			<pkg>mount</pkg>
			<pkg>libstdc++</pkg>
		</pkg-list>
	</target>
</ns0:RootFileSystem>
